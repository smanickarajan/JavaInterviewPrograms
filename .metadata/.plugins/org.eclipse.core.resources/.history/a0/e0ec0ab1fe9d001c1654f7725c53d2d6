package com.corejava.interviewquestions;

public class ReverseInt {

	public static void main(String[] args) {

		// using algorithm
		int num = 12345;
		int rev = 0;

		while (num > 0) {
			rev = rev * 10 + num % 10;
			num = num / 10;

		}
		System.out.println(rev);

//using Stringbuffer

		StringBuffer sb = new StringBuffer(String.valueOf(num));
		System.out.println(sb);
	}

}
